













<div class="container">
  <div align="center"><h1>New guild</h1></div>


  <%= simple_form_for(@guild, html: { class: 'form-horizontal' }) do |f| %>
    <%= f.input :name %>
    <%= f.input :owner %>
    <%= f.label :realm %>
    <%= f.select(:realm,[['',''] , ['Jabbit', 'Jabbit'], ['Luminai', 'Luminai'], ['Entity', 'Entity'], ['Warhound', 'Warhound']], {}, { :class => 'form-control' }) %>
    <%= f.label :mode %>
    <%= f.select(:mode,[['EPGP','EPGP'] , ['Dkp', 'DKP']], {}, { :class => 'form-control' }) %>
    <div align="center">
    <br><br>

      <%= f.button :button ,'Up', class: 'btn lg btn-info' , :style => "display:inline" do %>
        <span class="glyphicon glyphicon-ok" aria-hidden="true">    </span>     Create Guild
      <% end %>
    </div>
  <% end %>


</div>
