<script type="text/javascript">  
    floatingMenu.add('floatdiv',  
        {  
            targetLeft: 10,   
            targetTop: 10,  
        });  
</script> 
<div class="row">
  <div class="col-md-2" id="floatdiv">
    <div class="bs-callout bs-callout-info">
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- UnderLeftControls -->
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-2889093804964574"
         data-ad-slot="5647418646"
         data-ad-format="auto"></ins>
    <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
    </div>
  </div>
  <div class="col-lg-10">
    <%= grid(@guilds_grid) do |g|

            g.column name:  'Name' , attribute: 'name'  do |guild|
              guild.name
            end

            g.column name:  'Realm', attribute: 'realm' , custom_filter: [['Jabbit', 'Jabbit'], ['Entity', 'Entity'], ['Luminai', 'Luminai'], ['Warhound', 'Warhound']]  do |guild|
              guild.realm
            end            

            g.column name:  'Mode', attribute: 'mode' , custom_filter: [['EPGP', 'EPGP'], ['DKP', 'DKP']]  do |guild|
              guild.mode
            end

            g.column  name:  'Owner', attribute: 'owner' do |guild|
              guild.owner
            end

            g.column  name:  'Last update:', attribute: 'updated_at',filter: false do |guild|
              time_ago_in_words(guild.updated_at) + " ago    at: " + guild.updated_at.to_s
            end            
            
            g.column  name:  'Details' , html: {style: 'max-width: 40px'} do |guild|
              content_tag(:div,(link_to "More" , guild_path(guild.id) , class: 'btn btn-info'),:align => "center")
            end
          end -%>
        </div>
</div>









