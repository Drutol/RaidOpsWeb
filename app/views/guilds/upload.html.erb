  <body>
    <div align="center">
      <div class="container">
        <div class="col-lg-5">    
          <%= form_tag({controller: "guilds", action: "import"}, method: "post") do %>
            <%= label_tag(:json, "Input Json Data") %>
            <%= text_area_tag(:json, nil ,class: "form-control")%>
            <%= submit_tag("Import" , class: "btn btn-primary") %></br>
          <% end %> 
        </div> 
      </div>
    </div>   
