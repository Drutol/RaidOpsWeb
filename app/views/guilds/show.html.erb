<!DOCTYPE html>
  <body>

  <h1 align="center"><%= @guild.name %>   -  <%= pluralize(GuildMember.where("guild_id = #{params[:id]}").count,"member")%></h1><br>

  <div id="wrapper">
    <div class="container-fixed">
     <div id="sidebar-wrapper">
          <ul class="col-md-2">
              <div class="list-group">
                <a href="#" class="list-group-item active fixed">
                  Controls
                </a>
                <% if current_user and User.find_by_email(current_user.email).guild_id and User.find_by_email(current_user.email).guild_id == @guild.id %>
                <a><%= link_to 'Edit', edit_guild_path(@guild), class: 'list-group-item' %></a>
                <a><%= link_to 'Delete', guild_path(@guild), class: 'list-group-item' ,method: :delete, data: { confirm: 'Are you sure?' } %></a>
                <a><%= link_to 'Upload Data', upload_guild_path, class: 'list-group-item' %></a>
                <a><%= link_to 'Download Data', download_guild_path, class: 'list-group-item' %></a>
                <% end %>
                <a><%= link_to 'All items', items_all_guild_path(@guild) ,class: 'list-group-item' %></a>
                <a><%= link_to 'Back', guilds_path ,class: 'list-group-item' %></a>

              </div>         
          </ul>
      </div>
    </div>


    <div class="col-md-10">
        <%# show_filters: :when_filtered %>

          <%= grid(@members_grid) do |g|

            g.blank_slate content_tag(:div, "No records found", class: 'alert alert-info')

            g.column name:  'Class' , attribute: 'str_class' , html: {style: 'max-width: 75px'} ,  custom_filter: [['Esper', 'Esper'], ['Warrior', 'Warrior'], ['Stalker', 'Stalker'], ['Engineer', 'Engineer'],['Medic', 'Medic'],['Spellslinger', 'Spellslinger']]  do |task|
              content_tag(:div ,image_tag("Icon#{task.str_class}.png" , :height => "50px" , :width => "50px" , :align => "middle" ),:align => "center") if task.str_class
            end            

            g.column name:  'Role' , attribute: 'str_role' , html: {style: 'max-width: 50px'} , custom_filter: [['Dps', 'DPS'], ['Heal', 'Heal'], ['Tank', 'Tank']] do |task|
              content_tag(:div ,image_tag("#{task.str_role}.png" , :height => "50px" , :width => "50px" , :align => "middle" ),:align => "center") if task.str_role
            end

            g.column name:  'Name', attribute: 'name'  do |task|
              task.name
            end

            g.column  name:  'EP', attribute: 'ep' do |task|
              task.ep
            end

            g.column  name:  'GP', attribute: 'gp' do |task|
              task.gp
            end            

            g.column  name:  'PR' , attribute: 'pr' do |task|
              [task.pr, {style: 'background-color: #F8FFD1;'}]  
            end
            
            g.column  name:  'Details' , html: {style: 'max-width: 40px'} do |task|
              content_tag(:div,(link_to "More" , guild_guild_member_items_path(@guild.id,task.id) , class: 'btn btn-default'),:align => "center")
            end
          end -%>
    </div>
     
        
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>