<div class="container" align="center">
<h1>Request password reset</h1>
<%= form_tag password_resets_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, nil , class: 'form-control' %><br>
    <%= submit_tag "Reset my password!" , class: 'btn btn-info' %>
  </div>
<% end %>
</div>
