<div class="container" align="center">
  <h1>Choose a new password</h1>
  <%= simple_form_for @user, :url => password_reset_path(@token), :html => {:method => :put} do |f| %>

    <div class="field">
      <%= f.label :email %><br />
      <%= @user.email %>
    </div>
    <div class="field">
      <%= f.input :password %>
    </div>
    <div class="field">
      <%= f.input :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit class: 'btn btn-info' %>
    </div>
  <% end %>
</div>
