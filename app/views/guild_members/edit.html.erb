<% if not authorized?(@guild.id) %>
<script type="text/javascript">
    window.location.href= "<%= "/guilds/#{params[:guild_id]}" %>" 
</script>
<% else %>

<div class="container">
  <div align="center"><h1>Update <%= @member.name %></h1></div>
  <% if @guild.mode == "EPGP" %>
  <%= simple_form_for(@member,url: {controller: "guild_members", action: "change"}, method: "post", html: { class: 'form-horizontal' }) do |f| %>
    <%= f.input :name , disabled: true %>
    <%= f.input :ep , :as => "integer"%>
    <%= f.input :gp , :as => "integer"%>
    <%= f.label :Class %>
    <%= f.select(:str_class,[['Esper', 'Esper'], ['Warrior', 'Warrior'], ['Stalker', 'Stalker'], ['Engineer', 'Engineer'],['Medic', 'Medic'],['Spellslinger', 'Spellslinger']], {}, { :class => 'form-control' }) %>
    <%= f.label :Role %>
    <%= f.select(:str_role,[['Dps', 'DPS'], ['Heal', 'Heal'], ['Tank', 'Tank']], {}, { :class => 'form-control' }) %>
    <div align="center">
    <br><br>

    <div>
      <%= f.button :button ,'Up', class: 'btn lg btn-info' , :style => "display:inline" do %>
        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Update <%= @member.name %>
      <% end %>
      <%= link_to content_tag(:p , '' , :class => "glyphicon glyphicon-remove")+" Delete", remove_guild_guild_member_path(@guild,@member), class: ' btn lg btn-danger' ,method: :remove, data: { confirm: 'Are you sure?' },:style => "display:inline" %>
      <%= link_to content_tag(:p , '' , :class => "glyphicon glyphicon-arrow-left")+" Back", guild_path(@guild), class: ' btn lg btn-primary' ,:style => "display:inline" %>
    </div>
    </div>
  <% end %>
  <% else %>
  <%= simple_form_for(@member,url: {controller: "guild_members", action: "change"}, method: "post", html: { class: 'form-horizontal' }) do |f| %>
    <%= f.input :name , disabled: true %>
    <%= f.input :net , :as => "integer"%>
    <%= f.label :Class %>
    <%= f.select(:str_class,[['Esper', 'Esper'], ['Warrior', 'Warrior'], ['Stalker', 'Stalker'], ['Engineer', 'Engineer'],['Medic', 'Medic'],['Spellslinger', 'Spellslinger']], {}, { :class => 'form-control' }) %>
    <%= f.label :Role %>
    <%= f.select(:str_role,[['Dps', 'DPS'], ['Heal', 'Heal'], ['Tank', 'Tank']], {}, { :class => 'form-control' }) %>
    <div align="center">
    <br><br>
    <div>
      <%= f.button :button ,'Up', class: 'btn lg btn-info' , :style => "display:inline" do %>
        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Update <%= @member.name %>
      <% end %>
      <%= link_to content_tag(:p , '' , :class => "glyphicon glyphicon-remove")+" Delete", remove_guild_guild_member_path(@guild,@member), class: ' btn lg btn-danger' ,method: :remove, data: { confirm: 'Are you sure?' },:style => "display:inline" %>
      <%= link_to content_tag(:p , '' , :class => "glyphicon glyphicon-arrow-left")+" Back", guild_path(@guild), class: ' btn lg btn-primary' ,:style => "display:inline" %>
    </div>
    </div>

  <% end %>


  <% end %>

</div>

<% end %>